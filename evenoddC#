using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;

namespace evenodd
{
    class Program
    {
        static void Main(string[] args)
        {
            int num;
            Console.WriteLine("Enter any number");
            num = int.Parse(Console.ReadLine());
            if (num % 2 == 0)
            { Console.WriteLine("NUMBER IS EVEN"); }
            else
            { Console.WriteLine("NUMBER IS ODD"); }   
        
          Console.ReadKey();
        }
    }
}
